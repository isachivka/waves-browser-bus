{
  "name": "@waves/waves-browser-bus",
  "version": "0.0.10",
  "main": "dist/browser-bus.min.js",
  "types": "src/index.ts",
  "devDependencies": {
    "@types/jest": "^24.0.4",
    "browserify": "^16.2.3",
    "jest": "^24.1.0",
    "ts-jest": "^23.10.5",
    "ts-utils": "^6.0.6",
    "typescript": "^3.3.3"
  },
  "files": [
    "dist",
    "src/**/*.ts"
  ],
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*test.+(ts)"
    ]
  },
  "scripts": {
    "patch": "npm version patch && npm publish && git push",
    "prepare": "npm run build",
    "preversion": "npm run test",
    "postversion": "npm publish",
    "postpublish": "git push",
    "build": "tsc --build ./ && npm run _build-full",
    "test": "jest",
    "_build-full": "browserify src/index.js -s bus -o ./dist/browser-bus.js && uglifyjs ./dist/browser-bus.js -o ./dist/browser-bus.min.js"
  }
}
